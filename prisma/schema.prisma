// Prisma Schema - PostgreSQL এর জন্য
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  orders    Order[]
  chats     Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}


model Order {
  id            String        @id @default(uuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  items         Json          
  totalAmount   Float
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(PENDING)
  orderStatus   OrderStatus   @default(PENDING)
  stripePaymentId String?
  paypalOrderId   String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}



model Chat {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  reply     String
  createdAt DateTime @default(now())
}



enum PaymentMethod {
  STRIPE
  PAYPAL
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
}